<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-bistri" version="1.0">
    <name>Bistri WebRTC JS Api</name>
    <description>Add Bistri WebRTC JS Api to your Cordova app. crosswalk-project-webview is used as a dependency to provide WebRTC support</description>
    <license>Apache 2.0</license>
    <keywords>cordova,bistri</keywords>
    <js-module src="www/bistri-js-api.js" name="BistriJSApi">
        <clobbers target="bistriJSApi" />
    </js-module>
    <platform name="ios">
        <config-file target="*-Info.plist" parent="CFBundleURLTypes">
        </config-file>
    </platform>
    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
            <uses-permission android:name="android.permission.RECORD_AUDIO" />
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-feature android:name="android.hardware.camera" />
            <uses-feature android:name="android.hardware.camera.autofocus" />
        </config-file>
    </platform>
    <dependency id="cordova-plugin-crosswalk-webview" url="https://github.com/crosswalk-project/cordova-plugin-crosswalk-webview" commit="2.0.0" />
    <dependency id="cordova-plugin-iosrtc" url="https://github.com/eface2face/cordova-plugin-iosrtc" commit="3.1.0" />
</plugin>
